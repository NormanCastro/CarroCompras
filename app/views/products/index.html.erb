<br>
<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">
          <i class="fas fa-search"></i>
        </span>
      </div>
      <input type="text" class="form-control" placeholder="Busca un producto aquÃ­..." id="buscar">
    </div>
  </div>
</div>


<div class="row">
 <% @products.each do |product| %>
   <div class="col-md-3">
     <div class="card text-center" style="margin-top: 30px;">
       <%= image_tag product.photo, class: 'card-img-top' %>
       <div class="card-body">
         <h6 class="card-title"><%= product.name %></h6>
         <p class="card-text">$<%= product.price %></p>

         <%= link_to product_orders_path(product), class: "btn btn-success", method: :post do %>
           <i class="fas fa-cart-plus"></i>
         <% end %>

       </div>
     </div>
   </div>
 <% end %>
</div>

<script type="text/javascript">
  $('#buscar').keyup(function(){

    $.ajax({
      url: '<%= products_path %>',
      type: 'GET',
      dataType: 'script',
      data: {buscar: $('#buscar').val()},
    })
    .done(function() {
      console.log("success");
    })
    .fail(function() {
      console.log("error");
    })
    
});
</script>